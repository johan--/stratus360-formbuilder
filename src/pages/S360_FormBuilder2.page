                    for(var i = 0; i < res.records.length; i++){
                        var arrayOfreturnedFlowField = res.records[i].S360_FA__Returned_Flow_Field__c ? res.records[i].S360_FA__Returned_Flow_Field__c.split(',') : []
                        var returnedFlowField = {};
                        arrayOfreturnedFlowField.forEach(function(f){
                            returnedFlowField[f] = {
