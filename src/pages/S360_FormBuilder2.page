        function getUsedFields(){
			            
            var jsonFieldElement = document.getElementById('j_id0:j_id2:Form_Config_JSON');
            
            if(formConfig != '' && formConfig != undefined){
                jsonFieldElement.value = JSON.stringify(formConfig);
            }
            
            var fieldsConfig = document.getElementById('j_id0:j_id2:Form_Config_Field');
            var formHasFlowController = document.getElementById('j_id0:j_id2:Form_Config_Has_FLow');
            var selectedInputFieldsInFlow = document.getElementById('j_id0:j_id2:SelectedInputFieldsInFlow');
            var InputFlowMapField = document.getElementById('j_id0:j_id2:InputFlowMap');
            var RecordTypeField = document.getElementById('j_id0:j_id2:Form_Record_Type');
            var recordTypeSelection = document.getElementById('j_id0:j_id2:recordTypeSelection');
            var config = formConfig;
            var fields = collectField(config);
            if(fields.indexOf('Name') == -1){
                //Not sure why we add name here
               // fields.push('Name');
            }
            debugger;
            fieldsConfig.value = fields.join(',');
            formHasFlowController.checked  = hasFlowController;
            selectedInputFieldsInFlow.value = selectedInputFields;
            InputFlowMapField.value = inputFlowMap;
            RecordTypeField.value = recordTypeMap;
            recordTypeSelection.value = recordType;
        }
        
        function collectField(data){
            var acceptedFields = {!objectFields};
            var fields = [];
            data.components.forEach(function(cmp){
                //check is form has flow controller
                if(cmp.type === 'flowbutton'){
                    hasFlowController = true;
                    // get selected input fields
                    selectedInputFields = cmp.selectedInputFields;
                    
                    
                    // get mapping previous flow form field with the current field
                    if(cmp.selectedFlow){
                        debugger;
                        var mapping = cmp.inputFlowMap[cmp.selectedFlow];
                        var newMapping = {};
                        
                        for(var key in mapping){
                            if(mapping.hasOwnProperty(key)){
                                newMapping[mapping[key]] = key;
                                
                                //if lookup
                                /*if(cmp.inputFieldDetails[mapping[key]].type === 'lookup'){
                                    
                                }*/
                            }
                        }
                        
                        inputFlowMap = JSON.stringify(newMapping);
                    }
                    console.log(cmp.inputFlowMap);
                    console.log(cmp.selectedFlow);
                    
                    
                }
                
                if(cmp.type === 'recordtype'){
                	 recordTypeMap = JSON.stringify(cmp.inputFlowMap);
                }
                // Collect Record Type from record type select
                if(cmp.type === 'recordtypeselect'){
                    debugger;
                    recordType = cmp.selectedRecordType.Id;
                }
                //collect fields
                if(cmp.type == 'columns'){
                    cmp.columns.forEach(function(col){
                        fields = fields.concat(collectField(col));
                    });
                }else if(cmp.type == 'fieldset' || cmp.type == 'well' || cmp.type == 'panel'){
                    fields = fields.concat(collectField(cmp));
                }else if(cmp.type != 'button' && cmp.type != 'htmlelement'){
                    if(acceptedFields.indexOf(cmp.key) != -1 || acceptedFields.indexOf(cmp.key.split('__r')[0] + '__r') != -1){
                        fields.push(cmp.key);
                    }
                }
            });
            
            return fields;
        }
        
        function autoSave(){
            var autoSaveInterval = '{!S360_Form_Config__c.AutoSave_Interval__c}' == '' ? 0 : parseInt('{!S360_Form_Config__c.AutoSave_Interval__c}');
            var isAutoSave = {!S360_Form_Config__c.AutoSave__c};
            
            if(!autoSaveInterval || autoSaveInterval == 0){
                isAutoSave = false;
            }
            
            if(isAutoSave){
                setInterval(function(){
                    document.getElementById("autoSaveMessage").innerHTML = "Saving...";
                    getUsedFields();
                    autoSaveAF();
                    
                    // restart form has flow controller value
                    // and it selected input fields;
                    // and input flow mapping
                    hasFlowController = false;
                    selectedInputFields = [];
                    inputFlowMap = '';
                }, 1000 * 60 * autoSaveInterval);
            }
        }
        
