                                'type': ''
                            }
                        });
                        
                        returnedFlowField['Id'] = {
                            'key': 'Id',
                            'type': ''
                        }
                        
                        flow[res.records[i].Id] = {
                            'name': res.records[i].Name,
                            'returnedFlowField': returnedFlowField//res.records[i].S360_FA__Returned_Flow_Field__c? res.records[i].S360_FA__Returned_Flow_Field__c.split(',') : []
                        }
                    }
                    console.log(flow);
                    debugger;
                    
